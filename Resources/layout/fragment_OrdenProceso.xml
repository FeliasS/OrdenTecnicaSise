<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--FECHA DE ATENCION-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="FECHA DE ATENCION"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lblFechaAtencion"
                tools:text="Mi fecha"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="XmlNamespace" />

        </LinearLayout>

        <!--HORA DE ATENCION-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="HORA DE ATENCION"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lblHoraAtencion"
                tools:text="Mi hora"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="XmlNamespace" />

        </LinearLayout>

    </LinearLayout>

    <!--DIAGNOSTICO-->
    <TextView
        android:text="DIAGNOSTICO"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <!--PROBLEMA-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldOutline"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DIAGNOSTICO"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/txtDiagnostico"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:text="FOTOGRAFIA DE ORDEN"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--INSERTAR IMAGEN DE COMO SE ENCONTRO EL PROBLEMA-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView
            android:text="Imagen Inicio"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lblNomImageFirst"
            tools:text="Nombre Imagen del problema"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <Button
            android:id="@+id/btnSubirImg1"
            android:text="SUBIR IMAGEN"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnTomarFoto1"
            android:text="TOMAR FOTO"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--INSERTAR IMAGEN DE LA SOLUCION QUE SE REALIZO-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="Imagen Fin:"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lblNomImageLast"
            tools:text="Nombre Imagen de la solucion"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <Button
            android:id="@+id/btnSubirImg2"
            android:text="SUBIR IMAGEN"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnTomarFoto2"
            android:text="TOMAR FOTO"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--FIRMA DEL CLIENTE-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldOutline1"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIRMA DEL CLIENTE"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/txtFirmaCliente"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--FIRMA DEL TECNICO-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldOutlin2"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FIRMA DEL TECNICO"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/txtFirmaTecnico"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--FINALIZAR ORDEN-->
    <Button
        android:id="@+id/btnFinalizarOrden"
        android:text="FINALIZAR ORDEN"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
