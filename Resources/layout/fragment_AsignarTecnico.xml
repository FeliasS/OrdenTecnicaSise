<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="ASIGNAR TECNICO"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:elevation="10dp"
        android:textColor="#ffff"
        android:background="#6200EE"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--CODIGO-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView
            android:text="Codigo:"
            android:layout_weight="1"
            android:textColor="#31B099"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lblAsigCodigo"
            tools:text="Nombre del cliente"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <!--CLIENTE-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView
            android:text="Cliente:"
            android:layout_weight="1"
            android:textColor="#31B099"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lblAsigCliente"
            tools:text="Nombre del cliente"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="XmlNamespace" />

    </LinearLayout>
  
    <!--SUCURSAL-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sucursal:"
            android:layout_weight="1"
            android:textColor="#31B099"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lblAsigSucursal"
            tools:text="Nombre de la sucursal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="XmlNamespace" />

    </LinearLayout>

    <!--ASUNTO-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Asunto:"
            android:textColor="#31B099"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lblAsigAsunto"
            tools:text="MI ASUNTO"
            android:textColor="#ffff"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </LinearLayout>

    <!--RECYCLERVIEW AND SEARCHVIEW-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px">

        <SearchView
            android:id="@+id/svAsignarView"
            android:queryHint="Tecnico"
            android:elevation="20dp"
            android:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAsignarTecnico"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>

    <!--BOTON ASIGNAR-->
    <Button
        android:id="@+id/btnAsignarTecnico"
        android:text="ASIGNAR TECNICO"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
