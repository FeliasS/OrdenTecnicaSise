<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--FECHA Y HORA LABELS-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:text="Fecha:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:text="Hora:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--HORA Y FECHA TEXTVIEW-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/lblFecha"
            tools:text="12/12/2020"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lblHora"
            tools:text="6:00 pm"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--CLIENTE-->
    <AutoCompleteTextView
        android:id="@+id/autoComplCliente"
        android:hint="Cliente"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--SUCURSAL-->
    <AutoCompleteTextView
        android:id="@+id/autoComplSucursal"
        android:hint="Sucursal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--ASUNTO-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ASUNTO:"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/txtAsunto"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--DETALLE ORDEN-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Detalle Orden"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--DISPOSITIVO-->
        <AutoCompleteTextView
            android:id="@+id/autoComplDispositivo"
            android:hint="Dispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--PROBLEMA-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="problema"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/txtProblema"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLstDetalleOrden"
        android:text="agregar a Lista"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--Aqui aplicamos un recyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerV_ODetalle"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <Button
        android:id="@+id/btnGenerarOrden"
        android:text="generar Orden"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
